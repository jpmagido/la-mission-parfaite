        </div>
        <div class="input-group">
          <%= label_tag :city_restaurants, "Rechercher par ville" %>
           <%= collection_select :city_restaurants, :city_id, City.all.order('name ASC'), :id, :name, {include_blank: 'Selectionner une ville'} %>
        </div>
        <div class="input-group">
          <%= label_tag :vegan, "Vegan ?" %>
          <%= check_box_tag 'vegan', true %>
        </div>
        <div class="input-group-btn">
            <%= button_tag "Rechercher un restaurant", name: nil  %>
        </div>
      <% end %>
    </div>
